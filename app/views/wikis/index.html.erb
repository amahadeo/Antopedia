<h1 class="text-center">Wikis</h1>

<div class="row">
  <div class="col-md-12">
    <table class="table table-condensed table-hover" id="wiki-table">
      <tbody>
        <% @wikis.each do |wiki| %>
          <tr>
            <td>
              <h4><%= link_to (markdown_to_html wiki.title), wiki %></h4>
            </td>
            <td>
              <% if policy(wiki).edit? %>
              <h4><%= link_to "Edit", edit_wiki_path(wiki), class: "btn btn-info btn-xs" %></h4>
              <% end %>
            </td>
            <td>
              <% if policy(wiki).destroy? %>
              <h4><%= link_to "Delete", wiki, method: :delete, class: "btn btn-danger btn-xs" %></h4>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="text-center">
      <% if policy(Wiki.new).new? %>
        <%= link_to "New Wiki", new_wiki_path, class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>